#recipe Blog
#n Wyam.Minification
#theme CleanBlog

Pipelines.Add("MinifyContent",
    ReadFiles("*.md"),
    FrontMatter(Yaml()),
    Markdown(),
    Razor(),
    MinifyHtml(),
    WriteFiles(".html")
);

Pipelines.Add("MinifyJS",
    ReadFiles("*.js"),
    MinifyJs(),
    WriteFiles(".js")
);

Pipelines.Add("MinifyCSS",
    ReadFiles("*.css"),
    MinifyCss(),
    WriteFiles(".css")
);
